{
  "name": "mini-store-client",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Frontend client for Mini Store Inventory Management System",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.app.json && tsc -p tsconfig.node.json",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:coverage:open": "vitest run --coverage && open ./coverage/index.html",
    "test:inventory": "vitest run src/lib/__tests__/inventory",
    "test:api": "vitest run src/lib/__tests__/api.service.test.ts",
    "test:validation": "vitest run src/lib/__tests__/inventory.form.validation.test.ts",
    "lint": "svelte-check --tsconfig ./tsconfig.app.json"
  },
  "dependencies": {
    "svelte": "^4.0.0"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^3.0.0",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/svelte": "^4.0.0",
    "@testing-library/user-event": "^14.6.1",
    "@tsconfig/svelte": "^5.0.4",
    "@types/jest": "^29.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "jsdom": "^26.1.0",
    "svelte-check": "^3.0.0",
    "typescript": "~5.8.3",
    "vite": "^5.0.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
